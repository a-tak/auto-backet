{

  "manifest_version": 2,
  "name": "AutoBacket",
  "version": "0.1.0",
  "author": "A-tak",
  "description": "メールをベイジアンフィルターで複数のバケツに分類してタグを付ける拡張機能です",
  "homepage_url": "https://github.com/a-tak/auto-backet",
  "icons": {
    "48": "icons/beasts-48.png"
  },
  "applications": {
    "gecko": {
      "id": "autobacket@a-tak.com",
      "strict_min_version": "68.0"
    }
  },

  "permissions": [
    "messagesRead"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "AutoBacket"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": { "default": "Alt+Shift+B" },
      "description": "AutoBacketの呼び出し"
    }
  }
}
